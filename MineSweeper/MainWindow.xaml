<Window x:Class="MineSweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MineSweeper"
        Title="MainWindow" Height="280" Width="198">
    <Grid Name="BackgroundGrid" Background="#C0C0C0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border BorderBrush="#7B7B7B" BorderThickness="1" Grid.Row="0" Margin="10,10,10,5">
            <Button Content="Hello!" Height="40" Width="40" HorizontalAlignment="Center" />
        </Border>
        <Border Name="gridBorder" BorderBrush="#7B7B7B" BorderThickness="1" Grid.Row="1" Margin="10,5,10,10">
            <local:GridControl x:Name="gridBoard" ShowCustomGridLines="False" GridLineBrush="#7B7B7B" GridLineThickness="1" />
        </Border>
    </Grid>
</Window>
